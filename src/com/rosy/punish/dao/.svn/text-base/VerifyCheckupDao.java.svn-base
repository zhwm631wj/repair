
package com.rosy.punish.dao;

import java.util.List;

import com.rosy.dao.Dao;
import com.rosy.punish.model.VerifyCheckup;

public interface VerifyCheckupDao extends Dao {

    /**
     * Retrieves all of the verifyCheckups
     */
    public List getVerifyCheckups(VerifyCheckup verifyCheckup);

    /**
     * Gets verifyCheckup's information based on primary key. An
     * ObjectRetrievalFailureException Runtime Exception is thrown if 
     * nothing is found.
     * 
     * @param id the verifyCheckup's id
     * @return verifyCheckup populated verifyCheckup object
     */
    public VerifyCheckup getVerifyCheckup(final String id);

    /**
     * Saves a verifyCheckup's information
     * @param verifyCheckup the object to be saved
     */    
    public void saveVerifyCheckup(VerifyCheckup verifyCheckup);

    /**
     * Removes a verifyCheckup from the database by id
     * @param id the verifyCheckup's id
     */
    public void removeVerifyCheckup(final String id);
}

